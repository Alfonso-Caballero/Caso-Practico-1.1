pipeline {
    agent none
    options {
        skipDefaultCheckout() // Default repository cloning fails, causing pipeline failure
    }
    stages {
        stage('Get Code') {
            steps {
                sh 'git clone https://github.com/Alfonso-Caballero/Caso-Practico-1.1.git'
                sh 'whoami'
                sh 'hostname'
                echo "${WORKSPACE}"
            }
        }
    }
    post {
            always {
                deleteDir()
            }
        }
}
